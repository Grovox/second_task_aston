<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>servlets.BookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BooksServlet</servlet-name>
        <servlet-class>servlets.BooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorServlet</servlet-name>
        <servlet-class>servlets.AuthorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorsServlet</servlet-name>
        <servlet-class>servlets.AuthorsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyBookServlet</servlet-name>
        <servlet-class>servlets.BuyBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyBooksServlet</servlet-name>
        <servlet-class>servlets.BuyBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>servlets.UsersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/book/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BooksServlet</servlet-name>
        <url-pattern>/books/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorServlet</servlet-name>
        <url-pattern>/author/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorsServlet</servlet-name>
        <url-pattern>/authors/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyBookServlet</servlet-name>
        <url-pattern>/buyBook/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyBooksServlet</servlet-name>
        <url-pattern>/buyBooks/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/users/</url-pattern>
    </servlet-mapping>
</web-app>

